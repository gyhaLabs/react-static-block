{
    "compilerOptions": {
        "outDir": "./lib",
        "target": "es6",
        "lib": ["dom", "es6"],
        "module": "commonjs",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "declaration": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "jsx": "react",
        "typeRoots": ["index.d.ts", "node_modules/@types"]
    },
    "include": ["./src/**/*.tsx", "./src/**/*.ts"],
    "exclude": ["node_modules"]
}
